#set($page_name = "Upload")
#parse('common/head.vm')

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Upload</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">Search file to upload on your computer</div>
            <div class="panel-body">
                <div class="form-group">
                	<form method='post' enctype='multipart/form-data'>
                  
                    
                        <input type="file" class="filestyle" id="upload-file-field" name='uploaded_file' placeholder="document.csv" data-btnClass="btn-primary" onchange="if(document.getElementById('upload-file-field').value.endsWith('.sink')) $('#upload-btn-trigger').removeAttr('disabled')">
                       
                
                    
                </div>
            </div>
            <div class="panel-footer">
            	<div class="form-group">
				    <label for="select-mapping">Select Mapping</label>
				    <select class="form-control" id="select-mapping" name='selected_mapping' onchange="$('#upload-btn-trigger').removeAttr('disabled')">
				      <option hidden disabled selected value> -- select a mapping -- </option>
				      #foreach( $mapping-name in $mappings )
					    <option>$mapping-name</option>
					  #end
				    </select>
				</div>
                <button class="btn btn-primary" id="upload-btn-trigger" disabled><i class="glyphicon glyphicon-download"></i> Upload</button> 
            </div>
            </form>
        </div>
    </div>
</div>

#parse('common/foot.vm')