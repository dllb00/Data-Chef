#set($page_name = "Manual Input")
#parse('common/head.vm')

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Manual Input</h1>
    </div>
</div>

<div class="row">

    <div class="col-lg-12">
        <div class="panel panel-default">
        <form method='post'>	

			<div class="panel-footer">
			
			<div class="form-group">
			<label for="select-mapping">Select Mapping</label>
            	<div class="input-group">
				    <select class="form-control" id="select-mapping" name='selected_mapping'>
				      #foreach( $mapping-name in $mappings )
					    <option>$mapping-name</option>
					  #end
				    </select>
				    				
				    
				        <div class="input-group-btn">
                            		<button class="btn btn-primary" id="btn-select-mapping"><i class="glyphicon glyphicon-search"></i></button>
                        		</div>
                    		</div>
                    		
                    	#if ($columns.size() > 0)
                    		<h1>$mapping</h1>
                    		#foreach( $column-name in $columns )
             					<div class="input-group">
             						<label for="input-$column-name">$column-name</label>
					    			<input class="form-control" id="input-$column-name" type="text" value=""></input>
					     		</div>
					  		#end
                    		<button type="button" class="btn btn-primary">Insert Data</button>
                    	#end
                    		</div>
                    		
                    		
                   
            </div>
            
            </form>
            
        </div>
    </div>
    
</div>

#parse('common/foot.vm')