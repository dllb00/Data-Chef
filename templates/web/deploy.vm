#set($page_name = "Deploy")
#parse('common/head.vm')

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Deploy</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">Search</div>
            <div class="panel-body">
                <div class="form-group">
                    <div class="input-group">
                        <input type="text" class="form-control" id="deploy-search-field" placeholder="upload" value="upload">
                        <div class="input-group-btn">
                            <button class="btn btn-primary" id="deploy-btn-search" onclick="deploySearch()"><i class="glyphicon glyphicon-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <button class="btn btn-primary" id="deploy-btn-trigger" onclick="deployTrigger()" disabled><i class="glyphicon glyphicon-download"></i> Deploy All</button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">Files</div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="file-table">
                        <thead>
                        <tr>
                            <th>File</th>
                        </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

#parse('common/foot.vm')